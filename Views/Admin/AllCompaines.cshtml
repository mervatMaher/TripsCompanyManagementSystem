@model List<Company>
<!DOCTYPE html>
<head>

    <style>

        body, html {
            overflow-x: hidden; /* Prevent horizontal scrolling */
            background-color: #fef8f8;
        }

        .company-image {
            width: 50px;
            height: 50px;
            border-radius: 50px;
        }

        .table-body, .table-thead {
            background-color: white;
            
        }
        .table-thead {
            margin-bottom: 20px;
            height: 45px;
            position: relative;
            margin-top: 20px;
           
        }

        .table-thead thead {
           border-bottom-color: snow;
                border-radius: 10px;
        }

        .table-body {
            border-radius: 10px;
        }

        .background-box {
            height: 250px;
            background-color: #e8daef;
            border-radius: 20px;
            position: relative;
            margin-top: 40px;
        }

        .background-box img {
                width: 450px;
                position: absolute;
                bottom: -120px;
                right: -1px;
        }
 
        a {
            text-decoration: none;
            color: black;
        }

        .table-thead thead tr .thead-img {
            left: 100px;
            position: absolute;
        }

        .table-thead thead tr .thead-name {
            position: absolute;
            left: 280px;
        }

        .table-thead thead tr .actions {
            position: absolute;
            right: 190px;
        }

        .background-box h3 {
            position: absolute;
            top: 40px;
            left: 80px;
            font-weight: bold;
        }

        .background-box p {
            top: 90px;
            position: absolute;
            left: 80px;
        }

        .background-box a {
            top: 140px;
            position: absolute;
            left: 80px;
            width: 200px;
            border-radius: 10px;
            background-color: #a569bd;
            border-color: #a569bd;
            color: white;
            height: 45px;
        }

        /* Popup container */
        .popup {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.4);
        }

        /* Popup content */
        .popup-content {
            position: relative;
            margin: 15% auto;
            bottom: 180px;
            padding: 20px;
            width: 40%;
            background: white;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        }

        
        /* Close button */
        .close-btn {
            position: absolute;
            right: 10px;
            top: 5px;
            font-size: 25px;
            color: #333;
            cursor: pointer;
        }

        .delete-icon {
            color: #c0392b;
        }


        

   
    </style>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>


</head>

<div class="admin-main-container">
    <div class="thead-container">
        <div class="background-box">
            <h3>Welcome @ViewBag.User.FullName!</h3>
            <p> here is all the Companies, Do you want to add another one? </p>
            <a href="javascript:void(0)" id="createCompanyBtn" class="btn">Create Company</a>
            <img src="~/Images/character.png" />
        </div>


       
        <table class="table table-thead">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col" class="thead-img">Image</th>
                    <th scope="col" class="thead-name">Name</th>
                    <th class="actions">Actions </th>
                </tr>
            </thead>
        </table>
    </div>
    
    <table class="table table-body">
        <tbody>
            @{
                int Counter = 1;
            }
            @foreach (var Company in Model)
            {
                <tr>
                    <th scope="row">@Counter</th>
                    <td>
                        <img src="/Images/@Company.ImageUrl" class="card-img-top company-image"  alt="...">
                    </td>
                    <td>
                        <a href="/Admin/CompanyDetailsAdminView?id=@Company.Id" class="company-name" style="padding-right: 20px;">@Company.Name</a>
                    </td>
                    <td>
                        <a href="javascript:void(0)" class="edit-company-popUp" data-id="@Company.Id"><i class="fa-regular fa-pen-to-square"></i></a> ||
                        <a href="javascript:void(0)" class="add-moderator-popUp" data-id="@Company.Id"><i class="fa-solid fa-user-plus"></i></a> ||
                   @*      <a href="/Admin/AddModeratorInCompany?id=@Company.Id"><i class="fa-solid fa-user-plus"></i></a> || *@
                        <a href="/Admin/DeleteCompany?id=@Company.Id" class="delete-icon"> <i class="fa-solid fa-trash"></i></a> 
                    </td>
                </tr>
                Counter++;
            }
        </tbody>
    </table>
</div>
<div class="popup" id="popUpForm">
    <div class="popup-content">
        <span class="close-btn" id="closePopUp">&times;</span>
        <div id="popupContent">Loading...</div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#createCompanyBtn').on('click', function () {
            $('#popUpForm').show();
            $('body').css("overflow", "hidden");
            $('#popupContent').load("/Admin/CreateCompany");
        });

        $('#closePopUp').click(function () {
            $('#popUpForm').hide();
            $("body").css("overflow", "auto");
        });

        $(window).click(function (event) {
            if (event.target.id == "popupForm") {
                $("#popupForm").hide();
                $("body").css("overflow", "auto");
            }
        });
    });
</script>

<script>
    $(document).ready(function () {
        $('.edit-company-popUp').on('click', function () {
            var companyId = $(this).data('id');
            $('#popUpForm').show();
            $('body').css("overflow", "hidden");
            $('#popupContent').load("/Admin/EditView?id=" + companyId);
        });

        $('#closePopUp').click(function () {
            $('#popUpForm').hide();
            $("body").css("overflow", "auto");
        });

        $(window).click(function (event) {
            if (event.target.id == "popupForm") {
                $("#popupForm").hide();
                $("body").css("overflow", "auto");
            }
        });
    });
</script>

<script>
    $(document).ready(function () {
        $('.add-moderator-popUp').on('click', function () {
            var companyId = $(this).data('id');
            $('#popUpForm').show();
            $('body').css("overflow", "hidden");
            $('#popupContent').load("/Admin/AddModeratorInCompany?id=" + companyId);
        });

        $('#closePopUp').click(function () {
            $('#popUpForm').hide();
            $("body").css("overflow", "auto");
        });

        $(window).click(function (event) {
            if (event.target.id == "popupForm") {
                $("#popupForm").hide();
                $("body").css("overflow", "auto");
            }
        });
    });
</script>
