@model VerifyViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<head>
   <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

</head>

<div class="verify-main-box" style="">
    <div>
        <h3>Verify Email </h3>
        <form asp-action="SaveVerifyEmail" asp-controller="Account" method="post">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="Email" value="@Model.Email" aria-describedby="emailHelp">

            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

